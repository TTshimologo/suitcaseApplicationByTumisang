<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@android:color/white" />

    <!-- Top stroke -->
    <item
        android:left="-4dp"
        android:right="-4dp"
        android:bottom="-4dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </item>
</layer-list>